{
  "name": "function-list-side-bar",
  "displayName": "Function List Side Bar",
  "description": "VS Code extension that adds a function list to the sidebar",
  "version": "0.0.1",
  "publisher": "BonifaceMwanza",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "tasks": [
    {
      "label": "Open secondary sidebar on folder open",
      "command": "${command:workbench.action.toggleAuxiliaryBar}", 
      "runOptions": {
        "runOn": "folderOpen"
      },
      "hide": true
    }
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bonifacemwanza/func-navigator"
  },
  "contributes": {
    "viewsContainers": {
  
      "activitybar": [
        {
          "id": "functionList",
          "title": "Function List",
          "icon": "$(note)"
        }
      ]
    },
    "views": {
      "functionList": [
        {
          "id": "functionListView",
          "name": "Functions"
        }
      ]
    },
    "commands": [
      {
        "command": "functionList.revealRange",
        "title": "Reveal Range"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
